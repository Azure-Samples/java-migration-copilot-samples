<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="liberty">
        <environment id="liberty">
            <transactionManager type="JDBC"/>
            <dataSource type="JNDI">
                <property name="data_source" value="jdbc/StudentDB"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
         <mapper resource="persistence/xml/StudentMapper.xml"/>
    </mappers>
</configuration>